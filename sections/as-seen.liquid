{% comment %}
  As Seen In Section
{% endcomment %}

<div class="as-seen-in-container">
  {% if section.settings.title != blank %}
    <h2 class="as-seen-in-title">{{ section.settings.title }}</h2>
  {% endif %}

  {% if section.blocks.size > 0 %}
    <div class="as-seen-in-logos">
      {% for block in section.blocks %}
        {% if block.settings.image != blank %}
          <a
            href="{{ block.settings.link }}"
            target="_blank"
            rel="noopener noreferrer"
            class="as-seen-in-logo-link"
          >
            <img
              src="{{ block.settings.image | img_url: '150x' }}"
              alt="{{ block.settings.image_alt | escape }}"
              loading="lazy"
              class="as-seen-in-logo-img"
            />
          </a>
        {% endif %}
      {% endfor %}
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "As Seen In",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "As Seen In"
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Logo Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Logo Link"
        },
        {
          "type": "text",
          "id": "image_alt",
          "label": "Image Alt Text"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "As Seen In",
      "category": "Custom"
    }
  ]
}
{% endschema %}

{% stylesheet %}
.as-seen-in-container {
  padding: 2rem 1rem;
  text-align: center;
}

.as-seen-in-title {
  font-size: 1.5rem;
  font-weight: 600;
  margin-bottom: 1.5rem;
}

.as-seen-in-logos {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  gap: 2rem;
}

.as-seen-in-logo-link {
  display: inline-block;
}

.as-seen-in-logo-img {
  height: 60px;
  width: auto;
  margin: 0 40px;
  filter: grayscale(100%);
  transition: filter 0.3s ease-in-out;
  object-fit: contain;
}

.as-seen-in-logo-link:hover .as-seen-in-logo-img {
  filter: grayscale(0%);
}

@media only screen and (max-width:576px){
  .as-seen-in-logo-img {
  height: 40px;}
}
{% endstylesheet %}
